<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@android:color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_img"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/my" />
    <TextView
        android:id="@+id/settings_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default Name"
        android:layout_below="@+id/settings_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/settings_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is my Defaut Status"
        android:layout_below="@+id/settings_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp">

        <info.hoang8f.widget.FButton
            android:id="@+id/setting_img_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Change Image"
            android:layout_margin="20dp"
            app:cornerRadius="5dp"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"
            android:shadowColor="@android:color/black"
            app:fButtonColor="@android:color/darker_gray"/>
        <info.hoang8f.widget.FButton
            android:id="@+id/setting_stauts_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Change Status"
            android:layout_margin="20dp"
            app:cornerRadius="5dp"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"
            android:shadowColor="@android:color/black"
            app:fButtonColor="@color/colorPrimaryDark"/>
    </LinearLayout>

</RelativeLayout>