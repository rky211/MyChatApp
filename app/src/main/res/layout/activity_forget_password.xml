<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".logsignactivity.RegisterActivity"
    >

    <include
        android:id="@+id/frgt_page_app_toolbar"
        layout="@layout/app_bar_layout"/>

    <EditText
        android:id="@+id/frgt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/reg_email"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/log_page_app_toolbar"
        android:inputType="textEmailAddress"/>
    <Button
        android:id="@+id/frgt_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:layout_below="@id/frgt_email"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"/>

</RelativeLayout>