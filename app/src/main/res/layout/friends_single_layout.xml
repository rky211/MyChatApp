<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">
    <android.support.v7.widget.CardView
        android:id="@+id/frndsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:weightSum="1"
            android:layout_margin="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/frnds_single_img"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_margin="20dp"
                android:layout_weight=".3"
                android:src="@drawable/my" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/frnds_single_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default name"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/frnds_single_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Default Status"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/img_online"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_height="wrap_content"
                android:src="@drawable/online_icon"
                android:layout_gravity="center"
                android:visibility="invisible"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>